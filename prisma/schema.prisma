// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  Wallet    Wallet[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Wallet {
  walletId     Int            @id @default(autoincrement())
  balance      Float
  userId       Int?
  creditcard   creditcard[]
  transactions transactions[]
  User         User?          @relation(fields: [userId], references: [userId])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
}

model transactions {
  creditcardId Int      @id @default(autoincrement())
  walletId     Int
  amount       Float
  type         String
  wallat       Wallet   @relation(fields: [walletId], references: [walletId])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

model creditcard {
  credcardId     Int      @id @default(autoincrement())
  balance        Float
  active         String
  walletWalletId Int?
  Wallet         Wallet?  @relation(fields: [walletWalletId], references: [walletId])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId Int      @id @default(autoincrement())
  email  String   @unique
  name   String?
  Wallet Wallet[]
}

model Wallet {
  walletId     Int            @id @default(autoincrement())
  balance      Float
  userId       Int
  // user         User           @relation(fields: [userId], references: [userId])
  creatAt      DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  transactions transactions[]
  User         User?          @relation(fields: [userUserId], references: [userId])
  userUserId   Int?
}

model transactions {
  transactionId Int      @id @default(autoincrement())
  walletId      Int
  credcardId    Int
  value         Float
  type          String
  wallat        Wallet   @relation(fields: [walletId], references: [walletId])
  credcar       credcard @relation(fields: [credcardId], references: [credcardId])
  creatAt       DateTime @default(now())
  updatedAt     DateTime @default(now())
  log           log[]
}

model credcard {
  credcardId   Int            @id @default(autoincrement())
  userId       Int
  balance      Float
  active       String
  creatAt      DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  transactions transactions[]
}

model log {
  logID         Int          @id @default(autoincrement())
  transactionId Int
  operationType Float
  date          DateTime
  registry      Json
  active        String
  transation    transactions @relation(fields: [transactionId], references: [transactionId])
  creatAt       DateTime     @default(now())
  updatedAt     DateTime     @default(now())
}
